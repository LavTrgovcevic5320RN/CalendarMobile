        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carPictureIv4"
        android:layout_width="58dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@+id/carPictureIv3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carPictureIv5"
        android:layout_width="57dp"
        android:layout_height="100dp"
        android:padding="1dp"
        app:layout_constraintStart_toEndOf="@+id/carPictureIv4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carPictureIv6"
        android:layout_width="63dp"
        android:layout_height="100dp"
        android:padding="1dp"
        app:layout_constraintStart_toEndOf="@+id/carPictureIv5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carPictureIv7"
        android:layout_width="61dp"
        android:layout_height="100dp"
        android:padding="1dp"
        app:layout_constraintStart_toEndOf="@+id/carPictureIv6"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>